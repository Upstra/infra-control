{
  "name": "infra-control",
  "version": "0.9.3",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "format": "eslint \"src/**/*.ts\" \"test/**/*.ts\" --fix && prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_OPTIONS='-r tsconfig-paths/register' jest --config ./test/jest-e2e.json",
    "migration:generate": "ts-node -r dotenv/config ./node_modules/typeorm/cli.js -d src/core/config/data-source.ts migration:generate",
    "migration:run": "node ./node_modules/typeorm/cli.js -d dist/src/core/config/data-source.js migration:run",
    "migration:run:dev": "ts-node -r dotenv/config ./node_modules/typeorm/cli.js -d src/core/config/data-source.ts migration:run",
    "schema:backup": "ts-node scripts/generate-schema-backup.ts",
    "schema:backup:sh": "./scripts/generate-schema-backup.sh"
  },
  "dependencies": {
    "@liaoliaots/nestjs-redis": "^10.0.0",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/common": "^11.0.13",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.13",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.13",
    "@nestjs/platform-socket.io": "^11.1.0",
    "@nestjs/swagger": "^11.1.1",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.1.0",
    "@willsoto/nestjs-prometheus": "^6.0.2",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "nodemailer": "^7.0.4",
    "nodemailer-express-handlebars": "^7.0.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.14.1",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.2",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "ssh2": "^1.14.0",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.22",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@cyclonedx/cdxgen": "^11.4.3",
    "@nestjs/cli": "^11.0.6",
    "@nestjs/schematics": "^11.0.4",
    "@nestjs/testing": "^11.0.13",
    "@types/express": "^5.0.1",
    "@types/jest": "29.5.14",
    "@types/node": "^22.14.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "29.7.0",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "ts-jest": "29.3.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.(spec|test)\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.spec.ts",
      "!**/*.test.ts",
      "!**/*.module.ts",
      "!**/__mocks__/**",
      "!**/*.mock.ts",
      "!main.ts",
      "!**/core/config/**",
      "!**/core/filters/**",
      "src/core/filters/simple-message.filter.ts",
      "!**/core/decorators/**",
      "!**/core/pipes/**",
      "!**/core/utils/**",
      "!**/dto/*.ts",
      "!src/**/*.interface.ts",
      "!src/**/*.entity.ts",
      "!**/index.ts",
      "!**/repositories/**/*.ts",
      "!**/backups/**",
      "!**/migrations/**",
      "!src/migrations/**",
      "!**/providers/*.provider.ts"
    ],
    "coverageDirectory": "../coverage",
    "coverageThreshold": {
      "global": {
        "branches": 79,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^@core/(.*)$": "<rootDir>/core/$1",
      "^@modules/(.*)$": "<rootDir>/modules/$1"
    }
  },
  "packageManager": "pnpm@10.12.4+sha512.5ea8b0deed94ed68691c9bad4c955492705c5eeb8a87ef86bc62c74a26b037b08ff9570f108b2e4dbd1dd1a9186fea925e527f141c648e85af45631074680184"
}
