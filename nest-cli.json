{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "webpackConfigPath": "webpack.config.js",
    "tsConfigPath": "tsconfig.json",
    "assets": [
      {
        "include": "**/*.hbs",
        "watchAssets": true
      },
      {
        "include": "**/assets/**/*",
        "watchAssets": true
      }
    ]
  },
  "watchIgnore": [
    "**/node_modules/**",
    "**/dist/**",
    "**/.git/**",
    "**/coverage/**",
    "**/build/**",
    "**/coverage-final.json",
    "**/jest.config.js",
    "**/jest-e2e.json"
  ]
}
